<section id="main-content">
    <section class="wrapper">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Basic Forms
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <input type="hidden" name="ID" />
                                <label for="exampleInputEmail1">Tên sản phẩm</label>
                                <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="Enter name">
                                @Html.ValidationMessage("Name", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Nhập giá sản phẩm</label>
                                <input type="text" name="UnitPrice" class="form-control" id="exampleInputPassword1" placeholder="nhap gia">
                                @Html.ValidationMessage("UnitPrice", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Nhập mô tả sản phẩm</label>
                                <input type="text" name="Description" class="form-control" id="exampleInputPassword1" placeholder="nhap mo ta">
                                @Html.ValidationMessage("Description", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="sel1">Category:</label>
                                @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CategoryId, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="sel1">SupplierId:</label>
                                @Html.DropDownList("SupplierId", (IEnumerable<SelectListItem>)ViewBag.SupplierId, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">File input</label>
                                <input type="file" id="exampleInputFile">
                                <p class="help-block">Example block-level help text here.</p>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Check me out
                                </label>
                            </div>
                            <button type="submit" class="btn btn-info">Submit</button>
                        }
                    </div>

                </div>
            </section>

        </div>
    </section>
</section>
