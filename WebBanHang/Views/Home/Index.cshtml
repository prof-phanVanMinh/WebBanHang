@model PagedList.IPagedList<WebBanHang.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";
}
<h1>TOP 10 SẢN PHẨM TRONG THÁNG</h1>
@foreach (var item in Model)
{
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    @item.Name
                </div>
                <div class="panel-body text-center">
                    <img src="~/Images/products/@item.Image" style="width:100px;height:100px" />
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-5 text-left">
                            @item.UnitPrice USD
                        </div>
                        <div class="col-md-7 text-right">
                            @Html.ActionLink("Detail", "Product", new { Id = item.ProductId }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
}
<div class="clearfix"></div>
<div class="row text-center">
    @Html.PagedListPager(Model, page=>Url.Action("Index",new { page}))
</div>
